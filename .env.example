# Server Configuration
NODE_ENV=development
PORT=7777

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=transcription_db

# Service Configuration
SERVICE_ID=transcription-service
RETRIES=2
BACKOFF_MS=200

# Security Configuration
CORS_ORIGINS=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Compression Configuration
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Azure Speech-to-Text (Optional)
# Uncomment and add your credentials to enable Azure integration
# AZURE_SPEECH_KEY=your_azure_speech_key_here
# AZURE_REGION=eastus

# Feature Flags
# Control which features are enabled/disabled
FEATURE_FLAGS={"modules":{"users":true,"transcriptions":true},"features":{"users":{"list":true},"transcriptions":{"create":true,"list":true,"recent":true,"getOne":true,"update":true}}}
